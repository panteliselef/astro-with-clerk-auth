---
import { SignUp } from "astro-clerk-auth/client/react";
import Layout from "../../layouts/Layout.astro";
import { signInUrl } from "astro-clerk-auth";
import { ClerkLayout } from "astro-clerk-auth/astro-components";
---

<Layout title="Welcome to Astro.">
  <ClerkLayout>
    <div class="w-full flex justify-center">
      <SignUp
        client:load
        signInUrl={signInUrl}
        path="/sign-up"
        routing="path"
      />
    </div>
  </ClerkLayout>
</Layout>
