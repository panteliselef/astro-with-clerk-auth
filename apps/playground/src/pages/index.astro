---
import Layout from "../layouts/Layout.astro";
import Pronounce from "../react/Pronounce";

const externalLinks = [
  {
    title: "Github",
    href: "https://github.com/panteliselef",
    icon: `<svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="feather feather-github"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>`,
  },
  {
    title: "LinkedIn",
    href: "https://www.linkedin.com/in/pantelis-elef/",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-linkedin"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect x="2" y="9" width="4" height="12"></rect><circle cx="4" cy="4" r="2"></circle></svg>`,
  },
  {
    title: "Twitter",
    href: "https://twitter.com/elefcodes/",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>`,
  },
  {
    title: "Resume",
    href: "https://github.com/panteliselef",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-link-2"><path d="M15 7h3a5 5 0 0 1 5 5 5 5 0 0 1-5 5h-3m-6 0H6a5 5 0 0 1-5-5 5 5 0 0 1 5-5h3"></path><line x1="8" y1="12" x2="16" y2="12"></line></svg>`,
  },
];
---

<Layout title="Me">
  <main class="w-full flex justify-center lg:pt-10">
    <div class="w-full p-5 max-w-lg flex flex-col gap-10">
      <div class="flex flex-col">
        <p class="text-sm pt-4">Hey I'm</p>

        <h1 class="text-4xl font-serif">Pantelis Eleftheriadis</h1>
        <p class="flex items-center gap-3 gtext-sm leading-8">
          <span
            >But you can call me <span class="text-serif">/ˈɛ.lɛf/</span></span
          >
          <Pronounce client:idle />
        </p>
      </div>

      <!-- I work at <em>Clerk</em> as a <b>Software Engineer</b> for over {
            workedMonths
          } months. -->
      <!-- <div id="mine" class="flex flex-col p-5 rounded-md border-neutral-700 border">
        <p class="text-sm leading-7">
          I build open-source front-end packages at <em>Clerk</em> where I work as
          a <b>Software Engineer</b>
        </p>
      </div> -->

      <div class="flex flex-col">
        <p class="text-sm leading-7">
          I build open-source front-end packages at <em>Clerk</em> where I work as
          a <b>Software Engineer</b>
        </p>
      </div>

      <ul class="list grid grid-cols-2 gap-4 transition-opacity duration-200">
        {
          externalLinks.map(({ href, title, icon }) => (
            <li class="flex justify-between relative mine p-5 rounded-md dark:border-zinc-800 border hover:scale-110 transition-all duration-200 hover:z-10">
              {title}

              <a
                href={href}
                rel="noopener noreferrer"
                target="_blank"
                class="absolute w-full h-full"
              />

              {!!icon && <Fragment set:html={icon} />}
            </li>
          ))
        }
      </ul>

      <p class="text-sm text-zinc-700 dark:text-zinc-400">
        Built with Astro and Tailwind. Deployed at ▲ Vercel
      </p>
    </div>
  </main>
</Layout>

<style>
  .mine {
    backdrop-filter: blur(20px);
  }

  .list:hover .mine {
    opacity: 0.5;
  }

  .list .mine:hover {
    opacity: 1;
    background: rgba(0, 0, 0, 0.4);
  }

  @media (prefers-color-scheme: dark) {
    .mine {
      background: rgba(0, 0, 0, 0.3);
    }

    .list .mine:hover {
      background: rgba(0, 0, 0, 0.4);
    }
  }

  @media (prefers-color-scheme: light) {
    .mine {
      background: rgba(255, 255, 255, 0.3);
    }

    .list .mine:hover {
      background: rgba(255, 255, 255, 0.4);
    }
  }
</style>
